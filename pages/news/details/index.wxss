}
.newtime{ font-size: 24rpx;}
.v-li-note{ font-size: 24rpx;}
.pagetop,.pagetopimg{ border-radius: 0px; overflow: hidden; display: flex;  width: 100%;}
.pagetop{ padding: px; padding-bottom: 0;}
.pagetopimg image{ width: 100%;}

.view-r-jt{ width: 25px; height: 25px; border: 1px solid #3698ec; padding: 0; font-weight: bold; text-align: center; display: inline-block;
 border-radius: 100px;transform:rotate(-90deg); color: #3698ec;}
.view-r-jt .van-icon{font-weight: bold; display: block;}

.view-item{ display: flex; width: 94%; border-radius: 10px; padding: 10px 15px; margin: 30rpx 3%; background-color: rgba(254,254,254,.8);}
.view-item .view-l{ width: calc(100% - 30px);}
