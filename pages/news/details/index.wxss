	.sh-tit{ display: inline-block; text-align: center; position: relative;  padding: 8px 0; width: 100%;}
	.sh-tit .cna{ font-size: 18px; font-weight: bold; color: #3698ec; display: inline-block; width: 100%;  }
	.sh-tit .enb{ clear: both; font-size: 14px; color: #555; position: relative; display: inline-block;}
	.cnb{font-size: 14px;}
	.sh-tit .enb:before{content: ''; position: absolute; height: 2px; width: 20px; top: 50%; left: 50%; margin-left: -80px; background: #999; display: inline-block;}
	.sh-tit .enb:after{ content: ''; position: absolute; height: 2px; width: 20px; top: 50%; right: 50%; margin-right: -80px; background: #999; display: inline-block;}
	.page-con{display: inline-block; width: 100%; line-height: 180%; padding: 20rpx 0;}
	.page-con image{ max-width: 100%; margin:0; display: block;}
	.cpage{font-size: 24rpx;}
	.main-page{ background-color: rgba(254,254,254,.8); width: 94%; padding: 30rpx; margin: 20rpx 3%; border-radius: 10px; padding-bottom: 40px;}
	
	
	@font-face {
	    font-family: 'webfont';
	    font-display: swap;
	    src: url('//at.alicdn.com/t/webfont_lg3fpvwcgo.eot');
	    /* IE9*/
	    src: url('//at.alicdn.com/t/webfont_lg3fpvwcgo.eot?#iefix') format('embedded-opentype'),
	        /* IE6-IE8 */
	        url('//at.alicdn.com/t/webfont_lg3fpvwcgo.woff2') format('woff2'),
	        url('//at.alicdn.com/t/webfont_lg3fpvwcgo.woff') format('woff'),
	        /* chrome、firefox */
	        url('//at.alicdn.com/t/webfont_lg3fpvwcgo.ttf') format('truetype'),
	        /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
	        url('//at.alicdn.com/t/webfont_lg3fpvwcgo.svg#杨任东竹石体-Bold') format('svg');
