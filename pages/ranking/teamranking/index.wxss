.item-dz,.item-con-t,.item-con-li{display: flex; color: #3698ec; line-height: 30px; justify-content: center; text-align: center;}

.item-dz image,.names image{width: 16px; height: 16px; margin: 2px; margin-top: 6px; border-radius: 100px; border: 1px solid #f2f2f2;}
.names{ position: relative;}
