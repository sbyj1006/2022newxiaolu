.item-con-t view,.item-con-li view{  width: 28%; text-align: center; font-size: 28rpx; }
.item-con-t view.w10,.item-con-li view.w10{width: 10%;}
.item-con-t view.w30,.item-con-li view.w30{width: 30%;}
.item-con-t view.w50,.item-con-li view.w50{width: 50%;}

